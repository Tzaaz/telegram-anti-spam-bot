# FILE: .env.example
# Example environment variables - copy to .env and fill in real values
# NEVER commit .env to git!

# Telegram Bot Token (from @BotFather)
BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz123456789

# Public base URL (your Render service URL, no trailing slash)
PUBLIC_BASE_URL=https://your-bot.onrender.com

# Admin log channel chat ID (where bot sends moderation logs)
ADMIN_LOG_CHAT_ID=-1003399150838

# Redis URL
# Production (Render internal): redis://red-xxxxxxxxxx:6379
# Production (Render external): rediss://red-xxxxxxxxxx:<PASSWORD>@oregon-keyvalue.render.com:6379
# Local dev: redis://localhost:6379
REDIS_URL=redis://localhost:6379

# Feature flags
STRICT_MODE=false

# Server configuration (optional, defaults provided)
PORT=8080
HOST=0.0.0.0
LOG_LEVEL=INFO
